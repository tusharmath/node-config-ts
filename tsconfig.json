{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "plugins": [{ "name": "typescript-tslint-plugin", "configFile": "./tslint.json" }],
    "outDir": "./dist",
    "types": ["node", "mocha"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["index.ts", "src/**/*", "src/**/*.json"],
  "exclude": ["node_modules", "**/*.spec.ts", "types"]
}
